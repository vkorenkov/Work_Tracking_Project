                                    Grid.Column="1"
                                    Fill="#A5FFFFFF"
                                    Height="18"
                                    Margin="3,0,3,0"
                                    RadiusY="1"
                                    Grid.Row="0"
                                    RadiusX="1"
                                    Width="19" />
                                <Popup
                                    x:Name="PART_Popup"
